/* --------------经典案例-------------- */
.case{
	height: 566px;
}
.caseul li{
	width: 324px;
	height: 210px;
	position: relative;
	margin-right: 40px;
}
.caseul img{
	width: 100%;
	height: 100%;
}
.caseul .casetou{
	width: 100%;
	height: 100%;
	background: #000;
	opacity: 0.4;
	filter: alpha(opacity:40);
	position: absolute;
	top: 0;
	left: 0;
}
.casecon span{
	display: inline-block;
	width: 72px;
	height: 72px;
	border-radius: 50%;
	background: #000;
	opacity: 0.6;
	filter: alpha(opacity:60);
	position: absolute;
	top: 50%;
	left: 50%;
	margin-top: -40px;
	margin-left: -40px;
	
}
.casecon i{
	display: inline-block;
	width: 40px;
	height: 40px;
	background: url(../img/sousuo.png) no-repeat;
	background-size: 100% 100%;
	position: absolute;
	top: 50%;
	left: 50%;
	margin-top: -22px;
	margin-left: -22px;
}
.xiaotou{
	width: 100%;
	height: 46px;
	background: #000;
	opacity: 0.5;
	filter: alpha(opacity:50);
	position: absolute;
	bottom: 0;
	left: 0;
}
.casecon p{
	position: absolute;
	bottom: 16px;
	left: 40px;
	color: #fff;
}
.caseul{
	width: 1293px;
	margin: 0 auto;
}
.caseul .first{
	width: 60px;
	height: 60px;
	border-radius: 50%;
	background: #e1e1e1;
	text-align: center;
	margin-top: 76px;
}
.caseul .first a{
	line-height: 60px;
	font-size: 36px;
	color: #fff;
}
